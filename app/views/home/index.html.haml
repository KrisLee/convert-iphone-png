.container
  .row
    .span12.header
      %h2 Convert iPhone PNG files online!
      %h3 Forget about <strike>pngcrush</strike>!
      %p.lead
        Use this service you can convert iPhone PNG files (with CgBI chunk) extracted from any IPA file to standard PNG file format.


  .row
    .span6.offset3
      %form#upload-files{method: 'POST', action: '/upload', enctype: 'multipart/form-data'}
        .drop-area
          %input#files{:type => 'file', :name => 'files[]', :multiple => :multiple}
          = image_tag 'drop-icon.png'
          %span Drop your iPhone PNG or IPA files here or click to select file

  .row
    .span12.result

.container
